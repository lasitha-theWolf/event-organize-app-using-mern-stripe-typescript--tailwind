{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "no-console": "off",  // Disables the 'no-console' rule
    "react/no-unescaped-entities": "off",  // Disables the rule for unescaped entities in JSX
    "react/react-in-jsx-scope": "off",  // Disable this rule if using React 17+
    "no-constant-condition": "off",  // Disables warnings about conditions that are always true/false
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }]  // Warns but ignores vars starting with '_'
  }
}
